<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Reset Password</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="form-container">
    <h2>Reset Password</h2>
    <form method="POST" action="/forgot-password">
      <input type="email" name="email" placeholder="Registered Email" required />
      <input type="password" name="newPassword" placeholder="New Password" required />
      <button type="submit">Reset Password</button>
    </form>
    <p><a href="/">‚Üê Back to Login</a></p>
  </div>

  <!-- Alert integration -->
  <div id="message-data" data-message="<%= message ? message.replace(/"/g, '&quot;') : '' %>"></div>
  <div id="custom-alert" class="alert-overlay">
    <div class="alert-box">
      <div id="alert-message" class="alert-text"></div>
      <button class="alert-button" onclick="closeAlert()">OK</button>
    </div>
  </div>

  <script>
    const msg = document.getElementById("message-data").dataset.message;
    if (msg.trim()) {
      document.getElementById("alert-message").innerText = msg;
      document.getElementById("custom-alert").style.display = "flex";
    }
    function closeAlert() {
      document.getElementById("custom-alert").style.display = "none";
    }
  </script>
</body>
</html>
