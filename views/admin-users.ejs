<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Users</title>
  <link rel="stylesheet" href="/admin-style.css">
  <style>
    .user-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .user-table th,
    .user-table td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: left;
    }

    .approved {
      color: green;
      font-weight: bold;
    }

    .pending {
      color: orange;
      font-weight: bold;
    }

    .btn-approve {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 6px 12px;
      cursor: pointer;
      border-radius: 4px;
    }

    .btn-approve:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }

    .top-nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .back-btn {
      text-decoration: none;
      font-size: 14px;
      color: #66d9ef;
    }

    .message {
      color: green;
      margin-top: 10px;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      justify-content: center;
    }

    .search-bar {
      margin-top: 20px;
    }

    .search-input {
      padding: 6px;
      font-size: 14px;
      width: 250px;
    }

    .search-button {
      padding: 6px 12px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .no-users {
      margin-top: 30px;
      font-size: 1.2rem;
      color: #dc3545;
      text-align: center;
    }
  </style>
  <script>
    function confirmAction(event, actionType) {
      const confirmed = confirm(`Are you sure you want to ${actionType} this user?`);
      if (!confirmed) {
        event.preventDefault();
      }
    }
  </script>
</head>
<body>
  <div class="dashboard-container">
    <div class="top-nav">
      <h1>Manage Users</h1>
      <a class="back-btn" href="/admin-dashboard">‚Üê Back to Admin Dashboard</a>
    </div>

    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>

    <form class="search-bar" method="GET" action="/admin-users">
      <input
        type="text"
        name="search"
        class="search-input"
        placeholder="Search by name or email"
        value="<%= search || '' %>"
      />
      <button type="submit" class="search-button">Search</button>
    </form>

    <% if (users.length === 0) { %>
      <p class="no-users">No new approval requests.</p>
    <% } else { %>
      <table class="user-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td class="<%= user.approved ? 'approved' : 'pending' %>">
                <%= user.approved ? 'Approved' : 'Pending' %>
              </td>
              <td>
                <% if (!user.approved) { %>
                  <div class="action-buttons">
                    <form method="POST" action="/admin/approve-user" onsubmit="confirmAction(event, 'approve')">
                      <input type="hidden" name="userId" value="<%= user.id %>">
                      <button class="btn-approve" type="submit">Approve</button>
                    </form>
                    <form method="POST" action="/admin/reject-user" onsubmit="confirmAction(event, 'reject')">
                      <input type="hidden" name="userId" value="<%= user.id %>">
                      <button class="btn-approve" style="background-color: #dc3545;" type="submit">Reject</button>
                    </form>
                  </div>
                <% } else { %>
                  <button class="btn-approve" disabled>Approved</button>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
