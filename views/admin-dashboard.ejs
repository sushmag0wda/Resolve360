<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/admin-style.css" />
  <style>
    .disabled-btn {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .welcome-heading {
      font-size: 1.5rem;
      margin-bottom: 10px;
      color: #1a237e; /* Dark indigo for better contrast */
      font-weight: 600;
    }
  </style>
</head>
<body class="centered">

  <div class="admin-container">
    <div class="sidebar">
      <h2>Admin Panel</h2>
      <ul>
        <li><a href="/admin-dashboard">Dashboard</a></li>
        <li><a href="/admin-users">Manage Users</a></li>
        <li><a href="/logout" class="logout-btn">Logout</a></li>
      </ul>
    </div>

    <div class="dashboard">
      <h2 class="welcome-heading">Welcome, <%= admin.username %>!</h2>
      <h1>All Complaints</h1>

      <% if (message) { %>
        <p class="message"><%= message %></p>
      <% } %>

      <!-- Search by user name -->
      <form method="GET" action="/admin-dashboard" style="margin-bottom: 20px;">
        <input
          type="text"
          name="search"
          placeholder="Search by username..."
          value="<%= search || '' %>"
          style="padding: 8px; width: 250px; border-radius: 6px; border: 1px solid #888;"
        />
        <button type="submit" class="btn-approve">Search</button>
      </form>

      <% if (complaints.length === 0) { %>
        <p class="empty-message">No complaints found.</p>
      <% } else { %>
        <div class="table-container">
          <table class="complaints-table">
            <thead>
              <tr>
                <th>User</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Status</th>
                <th>Reply</th>
                <th>Update</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% complaints.forEach(c => { %>
                <tr>
                  <td><%= c.username %></td>
                  <td><%= c.subject %></td>
                  <td><%= c.description %></td>
                  <td>
                    <span class="status <%= c.status.replace(/ /g, '').toLowerCase() %>">
                      <%= c.status %>
                    </span>
                  </td>
                  <td><%= c.reply || 'â€”' %></td>
                  <td>
                    <form method="POST" action="/admin/update-status" class="reply-form">
                      <input type="hidden" name="complaintId" value="<%= c.id %>" />
                      <select name="status" required>
                        <option disabled selected>Status</option>
                        <option>Pending</option>
                        <option>In Progress</option>
                        <option>Resolved</option>
                        <option>Rejected</option>
                      </select>
                      <textarea name="reply" placeholder="Enter reply..."><%= c.reply %></textarea>
                      <button type="submit">Update</button>
                    </form>
                  </td>
                  <td>
                    <form method="POST" action="/admin/delete-complaint" onsubmit="return confirmDelete(<%= c.acknowledged %>)">
                      <input type="hidden" name="complaintId" value="<%= c.id %>" />
                      <button
                        type="submit"
                        class="delete-btn <%= !c.acknowledged ? 'disabled-btn' : '' %>"
                        <% if (!c.acknowledged) { %>disabled title="User has not acknowledged"<% } %>>
                        Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    function confirmDelete(acknowledged) {
      if (!acknowledged) {
        alert("User has not acknowledged the complaint yet.");
        return false;
      }
      return confirm("Are you sure you want to delete this complaint?");
    }
  </script>

</body>
</html>
