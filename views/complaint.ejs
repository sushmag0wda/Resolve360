<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Submit Complaint</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="form-container">
    <h2>Submit Complaint</h2>
    <form method="POST" action="/submit-complaint">
      <input type="text" name="subject" placeholder="Subject" required />
      <textarea name="description" placeholder="Describe your complaint..." required></textarea>
      <button type="submit">Submit</button>
    </form>
    <p><a href="/dashboard">‚Üê Back to Dashboard</a></p>
  </div>

  <!-- Alert integration -->
  <div id="message-data" data-message="<%= message ? message.replace(/"/g, '&quot;') : '' %>"></div>
  <div id="custom-alert" class="alert-overlay">
    <div class="alert-box">
      <div id="alert-message" class="alert-text"></div>
      <button class="alert-button" onclick="closeAlert()">OK</button>
    </div>
  </div>

  <script>
    const msg = document.getElementById("message-data").dataset.message;
    if (msg.trim()) {
      document.getElementById("alert-message").innerText = msg;
      document.getElementById("custom-alert").style.display = "flex";
    }
    function closeAlert() {
      document.getElementById("custom-alert").style.display = "none";
    }
  </script>
</body>
</html>
